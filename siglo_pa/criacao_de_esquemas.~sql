CREATE TABLESPACE SIGLOACERVOPA_DATA LOGGING DATAFILE 'D:\oracle\product\10.2.0\oradata\ORAITER1\DATAFILE\SIGLOACERVOPA_DATA.dbf'
SIZE 500M
AUTOEXTEND ON NEXT 200M MAXSIZE UNLIMITED
EXTENT MANAGEMENT LOCAL SEGMENT SPACE MANAGEMENT  AUTO;
 
CREATE TEMPORARY TABLESPACE SIGLOACERVOPA_TEMP TEMPFILE 'D:\oracle\product\10.2.0\oradata\ORAITER1\DATAFILE\SIGLOACERVOPA_TEMP.dbf'
SIZE 500M
AUTOEXTEND ON NEXT 200M MAXSIZE UNLIMITED
EXTENT MANAGEMENT LOCAL UNIFORM SIZE 250M;
 
CREATE TABLESPACE SIGLOACERVOPA_INDEX LOGGING DATAFILE 'D:\oracle\product\10.2.0\oradata\ORAITER1\DATAFILE\SIGLOACERVOPA_INDEX.dbf'
SIZE 100M
AUTOEXTEND ON NEXT 50M MAXSIZE UNLIMITED
EXTENT MANAGEMENT LOCAL SEGMENT SPACE MANAGEMENT  AUTO;


CREATE USER SIGLOACERVOPA IDENTIFIED BY siglopa
DEFAULT TABLESPACE SIGLOACERVOPA_DATA TEMPORARY TABLESPACE SIGLOACERVOPA_TEMP
QUOTA UNLIMITED ON SIGLOACERVOPA_DATA
QUOTA UNLIMITED ON SIGLOACERVOPA_INDEX;
GRANT CONNECT TO SIGLOACERVOPA;

CREATE USER SIGLOCREDENCIADOPA IDENTIFIED BY siglopa
DEFAULT TABLESPACE SIGLOCREDENCIADOPA_DATA TEMPORARY TABLESPACE SIGLOCREDENCIADOPA_TEMP
QUOTA UNLIMITED ON SIGLOCREDENCIADOPA_DATA
QUOTA UNLIMITED ON SIGLOCREDENCIADOPA_INDEX;
